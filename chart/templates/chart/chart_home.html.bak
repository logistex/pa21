{% extends 'base.html' %}

{% block title %}- Chart Home{% endblock %}

{% block submenu %}

    <nav class="navbar navbar-dark blue navbar-expand-md w-100 justify-content-center">
        <div class="navbar-collapse collapse w-100" id="collapsingNavbar3">
            <ul class="navbar-nav w-100 justify-content-center">
                {% if user.is_authenticated %}
                    <li class="nav-item {% if request.path == covid19new %} active {% endif %}">
                        <a class="nav-link" href="{% url 'chart:covid19new' %}">코로나19</a>
